@model SIGN.MVC.ViewModels.AssessmentViewModel
@{
    ViewBag.Title = "Assessment Details";
}

<div class="col-md-10 col-md-offset-1">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>@Model.Name</h4>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-3"><p>Description</p></div>
                            <div class="col-md-9"><p>@Model.Description</p></div>
                        </div>
                        <div class="row">
                            <div class="col-md-3"><p>Type</p></div>
                            <div class="col-md-6">
                                @{
                                    switch (Model.Type)
                                    {
                                        case SIGN.Domain.Enums.AssessmentType.Telephone:
                                <p><i class="fa fa-phone"></i> Telephone Assessment</p>;
                                            break;
                                        case SIGN.Domain.Enums.AssessmentType.Consultation:
                                <p><i class="fa fa-stethoscope"></i> Consultation</p>;
                                            break;
                                        default:
                                            break;
                                    }
                                }
                            </div>
                            <div class="col-md-3">
                                <a asp-controller="Assessment" asp-action="Step" asp-route-id="@Model.FirstStepId" class="btn btn-success">Run Assessment</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
